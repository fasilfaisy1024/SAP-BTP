<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog id="registrationDialog" title="Registration" type="Message" contentWidth="50%" contentHeight="50%">
        <content>
            <Label text="Name"/>
            <Input id="nameInput" value=""/>
            <Label text="Email"/>
            <Input id="emailInput" value=""/>
            <Label text="Password"/>
            <Input id="passwordInput" value="" type="Password"/>
            <Label text="Confirm Password"/>
            <Input id="confirmPasswordInput" value="" type="Password"/>
        </content>
        <beginButton>
            <Button text="Register" press="onPressRegister"/>
        </beginButton>
        <endButton>
            <Button text="Cancel" press="onPressCloseDialog"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>
